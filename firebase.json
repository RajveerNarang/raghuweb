{
	"hosting": {
		"public": "dist",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"rewrites": [
			{
				"source": "/api/**",
				"function": "api"
			},
			{
				"source": "**",
				"destination": "/index.html"
			}
		],
		"predeploy": ["npm run build"]
	},
	"functions": {
		"source": "functions"
	},
	"emulators": {
		"functions": {
			"port": 5001
		},
		"hosting": {
			"port": 5011
		},
		"ui": {
			"enabled": true
		},
		"singleProjectMode": true
	}
}
